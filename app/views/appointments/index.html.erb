<h1>Appointments</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Doctor</th>
      <th scope="col">Patient</th>
      <th scope="col">Recommendation</th>
      <th scope="col">Closed</th>
    </tr>
  </thead>
  <tbody>
    <% @appointments.each do |app| %>
      <tr>
        <td>
          <% if can? :edit, app %>
            <%= link_to app.doctor.username, edit_doctor_appointment_path(@doctor, app) %>
          <% else %>
            <%= app.doctor.username %>
          <% end %>
        </td>
        <td><%= app.patient.username %></td>
        <td><%= app.recommendation %></td>
        <td><%= app.closed? ? 'Ð¥' : '' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
