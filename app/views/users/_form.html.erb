<%= form_for user do |f| %>
  <div class="mb-3">
    <%= f.label :username, class: 'form-label' %>
    <%= f.text_field :username, disabled: true, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :phone, class: 'form-label' %>
    <%= f.text_field :phone, disabled: true, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.text_field :email, disabled: true, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :category_id %>
    <%= f.select :category_id, cat_list, { include_blank: true }, {class: 'form-select'} %>
  </div>
  <div class="mb-3 form-check">
    <%= f.check_box :user_role, class: "form-check-input" %>
    <%= f.label :user_role, class: "form-check-label" %>
  </div>
  <div class="mb-3 form-check">
    <%= f.check_box :doctor_role, class: "form-check-input" %>
    <%= f.label :doctor_role, class: "form-check-label" %>
  </div>
  <div class="mb-3 form-check">
    <%= f.check_box :admin_role, class: "form-check-input" %>
    <%= f.label :admin_role, class: "form-check-label" %>
  </div>

  <%= f.button type: 'submit', class: "btn btn-primary" %>
<% end %>